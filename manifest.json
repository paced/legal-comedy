{
  "manifest_version": 3,
  "name": "Legal Comedy",
  "description": "Power to the people! Add a Verified checkmark to everybody on Twitter.",
  "version": "0.1.0",
  "action": {
    "default_icon": "public/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "js": [
        "dist/main.cjs"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*"
  ]
}
